<PostUnit>
    height: self.minimum_height
    size_hint_y: None
    padding: dp(10)
    orientation: 'vertical'
    on_release: None
    canvas:
        Color:
            rgba: 0.9, 0.9, 0.9, 0.75
        RoundedRectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        height: dp(40)
        size_hint_y: None
        padding: dp(10)
        spacing: dp(5)
        Label:
            id: writer
            text: 'Writer : '
            color: 'black'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        BoxLayout:
            id: profile_layout
            size_hint_x: None
    Label:
        id: writedate
        text: 'Write date : '
        color: 'black'
        text_size: self.size
        halign: 'left'
        valign: 'middle'
    Label:
        id: content
        color: 'black'
        height: self.texture_size[1]
        size_hint_y: None
        padding: dp(10)
        text_size: self.width, None
        halign: 'left'
        valign: 'top'
    BoxLayout
        id: postimg_layout
        size_hint_y: None
        height: dp(150) if self.children else 0

<ClickableImg>
    size_hint_x: 1
    keep_ratio: True
    allow_stretch: True

<AlertPopup>:
    size_hint_y: 0.2
    auto_dismiss: True

<SelectPopup>
    size_hint_y: 0.2
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: content
        BoxLayout:
            Button:
                id: yesBtn
                on_release: root.select(yes=True)
            Button:
                id: noBtn
                on_release: root.select(yes=False)

<InsertPopup>
    size_hint_y: 0.2
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: content
        TextInput:
            id: text_input
        Button:
            text: 'Input'
            on_release: root.insert()

<FileChooserPopup>
    size_hint_y: 0.5
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
        Button:
            text: 'Select'
            size_hint_y: 0.2
            on_release: root.load_file()