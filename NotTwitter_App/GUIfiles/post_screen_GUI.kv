<PostUnit>
    height: self.minimum_height
    size_hint_y: None
    orientation: 'vertical'
    on_release: root.updateposts()
    canvas:
        Color:
            rgba: 0.9, 0.9, 0.9, 0.75
        RoundedRectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        height: dp(40)
        size_hint_y: None
        padding: dp(10)
        Label:
            id: writer
            text: 'Writer : '
            color: 'black'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            id: writedate
            text: 'Write date : '
            color: 'black'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
    Label:
        id: content
        color: 'black'
        height: self.texture_size[1]
        size_hint_y: None
        padding: dp(20)
        text_size: self.width, None
        halign: 'left'
        valign: 'middle'

<PostScreen>
    Image:
        size_hint: 1, 1
        source: root.bg_path
        fit_mode: "fill"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.1
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0.2, 0.5, 1, 1
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height
            Label:
                id: welcome_message
                text: ''
                color: 'black'
            Button:
                id: home_btn
                text: 'Go Home'
                on_release: root.updateposts('')
            Button:
                id: settings_btn
                text: 'Settings'
                on_release: root.goto_setting_screen()
        ScrollView:
            size_hint_x: 0.9
            size_hint_y: 0.8
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            do_scroll_x: False
            do_scroll_y: True
            BoxLayout:
                id: body
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: 'Write new post'
                on_release: root.goto_edit_screen()
            Button:
                text: 'Prev'
                on_release: root.go_prev()
            Button:
                text: 'Next'
                on_release: root.go_next()
