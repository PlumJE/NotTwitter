<PostScreen>
    Image:
        size_hint: 1, 1
        source: root.bg_path
        fit_mode: "fill"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.1
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0.2, 0.5, 1, 1
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height
            Label:
                id: welcome_message
                text: 'Welcome, User!'
                color: 'black'
                size_hint_x: 0.5
            BoxLayout:
                id: pfimg_layout
                size_hint_x: 0.2
            Button:
                id: menu_button
                text: 'Menu'
                size_hint_x: 0.3
                on_release: root.goto_menu_screen()
        FloatLayout:
            size_hint_y: 0.85
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.9
                pos_hint: {'center_x':0.5, 'center_y':0.5}
                BoxLayout:
                    size_hint_y: 0.05
                    Spinner:
                        size_hint_x: 0.2
                        id: category
                        text: 'About'
                        values: 'About', 'in Content', 'in Writer'
                    Spinner:
                        size_hint_x: 0.2
                        id: order
                        text: 'Order'
                        values: 'Order', 'by Time', 'by Content', 'by Writer'
                    TextInput:
                        size_hint_x: 0.4
                        id: search_text
                    Button:
                        size_hint_x: 0.2
                        text: 'Search'
                        on_release: root.searchposts()
                ScrollView:
                    size_hint_y: 0.85
                    do_scroll_x: False
                    do_scroll_y: True
                    BoxLayout:
                        id: body
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
            Button:
                size: self.texture_size
                size_hint: None, None
                padding: 0, 10
                pos_hint: {'center_x':0.8, 'center_y':0.1}
                text: 'Write new post'
                on_release: root.goto_edit_screen()
        BoxLayout:
            size_hint_y: 0.05
            Button:
                text: '<< Prev'
                on_release: root.go_prev()
            Button:
                id: home_btn
                text: 'Go Home'
                on_release: root.updateposts('')
            Button:
                text: 'Next >>'
                on_release: root.go_next()