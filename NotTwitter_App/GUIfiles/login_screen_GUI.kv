<LoginWindow>
    id: loginWin
    orientation: "vertical"
    size_hint: 1, 0.2
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.75
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        size_hint_y: 3
        cols: 2
        Label:
            text: "Nickname :"
            width: 100
            color: "black"
        TextInput:
            id: nickname
        Label:
            text: "Mail address :"
            width: 100
            color: "black"
        TextInput:
            id: mailaddr
        Label:
            text: "Password :"
            width: 100
            color: "black"
        TextInput:
            password: True
            id: password
    Button:
        id: loginbtn
        text: "Start!"
        size_hint_y: 1
        on_release: root.login()

<LoginScreen>
    Image:
        fit_mode: "fill"
        source: root.bg_path
        on_touch_up: root.openLoginWin()
    # Current Version Label!!
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        Label:
            size: 100, 30
            size_hint: None, None
            text: 'ver 1.0.0'
            color: 'black'
    AnchorLayout:
        id: loginlayout
        anchor_x: 'center'
        anchor_y: 'center'
