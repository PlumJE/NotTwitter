<ProfileScreen>:
    Image:
        size_hint: 1, 1
        source: root.bg_path
        fit_mode: "fill"
    ScrollView:
        padding: 5, 5, 5, 5
        do_scroll_x: False
        do_scroll_y: True
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.9
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.75
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    orientation: "vertical"
                    size_hint_x: 0.5
                    Label:
                        text: 'Profile image'
                        color: 'black'
                    
                    # 여기에 이미지 위젯을 삽입
                        
                BoxLayout:
                    id: nicknamelayout
                    Label:
                        text: 'Nickname : '
                        color: 'black'
                    TextInput:
                        id: nickname
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    id: mailaddrlayout
                    Label:
                        text: 'Email address : '
                        color: 'black'
                    TextInput:
                        id: mailaddr
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'First name : '
                        color: 'black'
                    TextInput:
                        id: firstname
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Last name : '
                        color: 'black'
                    TextInput:
                        id: lastname
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    id: firstloginlayout
                    Label:
                        text: 'First Login : '
                        color: 'black'
                    Label:
                        id: firstlogin
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    id: lastloginlayout
                    Label:
                        text: 'Last Login : '
                        color: 'black'
                    Label:
                        id: lastlogin
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Birth date : '
                        color: 'black'
                    TextInput:
                        id: birth
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Phone number : '
                        color: 'black'
                    TextInput:
                        id: phone
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Families : '
                        color: 'black'
                    TextInput:
                        id: families
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Country of residence : '
                        color: 'black'
                    TextInput:
                        id: nation
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Legion of residence : '
                        color: 'black'
                    TextInput:
                        id: legion
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Job occupation : '
                        color: 'black'
                    TextInput:
                        id: job
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Workplace : '
                        color: 'black'
                    TextInput:
                        id: jobaddr
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Button:
                        id: changeSaveBtn
                        text: 'Change'
                        on_release: root.change_save_button()
                    Button:
                        text: 'Exit'
                        on_release: root.exit_button()