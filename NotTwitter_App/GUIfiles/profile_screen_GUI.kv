<ProfileRecentScreen>:
    ScrollView:
        size_hint_y: 0.85
        do_scroll_x: False
        do_scroll_y: True
        BoxLayout:
            id: recentlist
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<ProfileDetailScreen>:
    ScrollView:
        padding: 5, 5, 5, 5
        do_scroll_x: False
        do_scroll_y: True
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.9
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.75
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    Label:
                        text: 'First name : '
                        color: 'black'
                    TextInput:
                        id: firstname
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Last name : '
                        color: 'black'
                    TextInput:
                        id: lastname
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    id: firstloginlayout
                    Label:
                        text: 'First Login : '
                        color: 'black'
                    Label:
                        id: firstlogin
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    id: lastloginlayout
                    Label:
                        text: 'Last Login : '
                        color: 'black'
                    Label:
                        id: lastlogin
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    id: phonelayout
                    Label:
                        text: 'Phone number : '
                        color: 'black'
                    TextInput:
                        id: phone
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Families : '
                        color: 'black'
                    TextInput:
                        id: families
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Country of residence : '
                        color: 'black'
                    TextInput:
                        id: nation
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Legion of residence : '
                        color: 'black'
                    TextInput:
                        id: legion
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Job occupation : '
                        color: 'black'
                    TextInput:
                        id: job
                        text: ''
                        color: 'black'
                        readonly: True
                BoxLayout:
                    Label:
                        text: 'Workplace : '
                        color: 'black'
                    TextInput:
                        id: jobaddr
                        text: ''
                        color: 'black'
                        readonly: True
                Button:
                    id: SaveBtn
                    text: 'Save'
                    on_release: root.save_profile()

<ProfileScreen>:
    Image:
        size_hint: 1, 1
        source: root.bg_path
        fit_mode: "fill"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.25
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.75
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0.2, 0.5, 1, 1
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.4
                Image:
                    size_hint_y: 0.8
                Button:
                    size_hint: None, None
                    size_x: self.text_size
                    size_y: self.text_size
                    pos_hint_x: 0.5
                    text: 'Change'
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.6
                TextInput:
                    id: nickname
                    text: 'Hello'
                BoxLayout:
                    Label:
                        text: 'Hello'
                        color: 'black'
                        size_hint_x: 0.2
                    TextInput:
                        id: mailaddr
                        text: 'Hello'
                        size_hint_x: 0.8
                BoxLayout:
                    Label:
                        text: 'Hello'
                        color: 'black'
                        size_hint_x: 0.2
                    TextInput:
                        id: birth
                        text: 'Hello'
                        size_hint_x: 0.8
                Button:
                    text: 'Change!'
        BoxLayout:
            size_hint_y: 0.7
            ScreenManager:
                id: body
        BoxLayout:
            size_hint_y: 0.05
            Button:
                text: 'Recent'
                on_release: root.goto_profile_recent_screen()
            Button:
                text: 'Detail'
                on_release: root.goto_profile_detail_screen()
            Button:
                text: 'Go Out'
                on_release: root.goto_post_screen()
