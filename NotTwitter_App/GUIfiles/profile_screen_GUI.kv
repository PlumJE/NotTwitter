<ProfileRecentScreen>:
    ScrollView:
        size_hint_y: 0.85
        do_scroll_x: False
        do_scroll_y: True
        BoxLayout:
            id: recentlist
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<ProfileDetailScreen>:
    ScrollView:
        padding: 5, 5, 5, 5
        do_scroll_x: False
        do_scroll_y: True
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.9
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.75
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    Label:
                        text: 'Nickname : '
                        color: 'black'
                    TextInput:
                        id: nickname
                BoxLayout:
                    Label:
                        text: 'Mail address : '
                        color: 'black'
                    TextInput:
                        id: mailaddr
                BoxLayout:
                    Label:
                        text: 'Birth date : '
                        color: 'black'
                    TextInput:
                        id: birth
                BoxLayout:
                    Label:
                        text: 'First name : '
                        color: 'black'
                    TextInput:
                        id: firstname
                BoxLayout:
                    Label:
                        text: 'Last name : '
                        color: 'black'
                    TextInput:
                        id: lastname
                BoxLayout:
                    Label:
                        text: 'First Login : '
                        color: 'black'
                    Label:
                        id: firstlogin
                        color: 'black'
                BoxLayout:
                    Label:
                        text: 'Last Login : '
                        color: 'black'
                    Label:
                        id: lastlogin
                        color: 'black'
                BoxLayout:
                    Label:
                        text: 'Phone number : '
                        color: 'black'
                    TextInput:
                        id: phone
                BoxLayout:
                    Label:
                        text: 'Families : '
                        color: 'black'
                    TextInput:
                        id: families
                BoxLayout:
                    Label:
                        text: 'Country of residence : '
                        color: 'black'
                    TextInput:
                        id: nation
                BoxLayout:
                    Label:
                        text: 'Legion of residence : '
                        color: 'black'
                    TextInput:
                        id: legion
                BoxLayout:
                    Label:
                        text: 'Job occupation : '
                        color: 'black'
                    TextInput:
                        id: job
                        text: ''
                BoxLayout:
                    Label:
                        text: 'Workplace : '
                        color: 'black'
                    TextInput:
                        id: jobaddr
                        text: ''
                Button:
                    id: changeBtn
                    text: 'Change'
                    on_release: root.change_profile()

<ProfileScreen>:
    Image:
        size_hint: 1, 1
        source: root.bg_path
        fit_mode: "fill"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.25
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.75
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0.2, 0.5, 1, 1
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height
            BoxLayout:
                id: pfimg_layout
                size_hint_x: 0.4
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.6
                Label:
                    id: nickname
                    text: 'Please input nickname'
                    font_size: sp(20)
                    bold: True
                    color: 'black'
                Label:
                    id: mailaddr
                    text: 'Mail address : '
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    color: 'black'
                Label:
                    id: birth
                    text: 'Birth date : '
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    color: 'black'
        BoxLayout:
            size_hint_y: 0.7
            ScreenManager:
                id: body
        BoxLayout:
            size_hint_y: 0.05
            Button:
                text: 'Recent'
                on_release: root.goto_profile_recent_screen()
            Button:
                text: 'Detail'
                on_release: root.goto_profile_detail_screen()
            Button:
                text: 'Go Out'
                on_release: root.goto_post_screen()
